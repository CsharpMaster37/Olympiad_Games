<!DOCTYPE html>
<html lang="ru">
  <head>
    <%- include('../../../Common_Elements/html/head.ejs') %>

    <link rel="stylesheet" href="../css/styles.css" />
    <link rel="stylesheet" href="../../../Common_Elements/style-info.css"/>
    <link rel="stylesheet" href="../css/style-table.css"/>    
    <title>Карусель</title>
  </head>
  <body>
    <div class="wrapper">
        <%- include('../../../Common_Elements/html/header.ejs') %>

      <main class="main">
        <div class="col-sm-2">
            <div class="Info-window">
              <div class="score-box">
                <div class="count-in-score">
                  <p>Баллы:</p>
                  <p id = "count-value" class="count-value">0</p>
                </div>
              </div>
            </div>
        </div>
        <div class="col-sm-10">
          <div class="Game">
            <div class="wrapper-progress-table"> 
              <table id="progress-table">
                <tbody>
                  <tr>
                    <th>№</th>
                    <th>Цена</th>
                  </tr>
                </tbody>                
              </table>              
            </div>  
            <div class="wrapper-question">
              <label id = "label-question" for="input-answer">Вопрос?</label>
              <form class="form-answer">
                <input type="text" id="input-answer" name="input-answer" placeholder="Введите ответ!"/>
                <input id = "button-form-answer" class = "button-form-answer" type="button" value="Следующий вопрос" />
              </form>
            </div>          
          </div>
        </div>
      </main>
      <%- include('../../../Common_Elements/html/footer.ejs') %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../js/scripts.js"></script>
  </body>
</html>
