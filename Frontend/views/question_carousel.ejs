<!DOCTYPE html>
<html lang="ru">
<head>
    <%- include('com-head.ejs') %>
    <link rel="stylesheet" href="../styles/admin-style.css"/>
    <title>Вопросы карусели</title>
</head>
<body>
    <div class="wrapper">
        <%- include('com-header.ejs') %>
        <main class="main">        
            <div class="col-sm-12"> 
                <div class="question-form">
                    <div>
                        <label for="score_first_question">Балл за первый вопрос:</label>
                        <input type="number" id="score_first_question" name="score_first_question" min="0">
                    </div>
                    <div>
                        <label for="score_failure">Минус балл за неправильный ответ:</label>
                        <input type="number" id="score_failure" name="score_failure" min="0">
                    </div>
                    <div>
                        <label for="score_success">Балл за правильный ответ:</label>
                        <input type="number" id="score_success" name="score_success" min="0">
                    </div>
                    <div>
                        <label for="total_questions">Количество вопросов:</label>
                        <input type="number" id="total_questions" name="total_questions" min="0" onchange="CountQuestions()">
                    </div>       
                    <div class="wrapper-table">
                        <table class="table-question">
                            <thead>
                                <tr>
                                    <th>Номер</th>
                                    <th>Вопрос</th>
                                    <th>Ответ</th>
                                </tr>
                            </thead>
                            <tbody id="CarouselQuestionsBody">
                            </tbody>
                        </table>  
                    </div>
                    <div>
                        <button class="ref-edit save-questions" type="button">Сохранить</button>
                    </div>
                </div>                
            </div>
        </main>
        <%- include('com-footer.ejs') %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../scripts/carousel-questions.js"></script>
</body>
</html>
