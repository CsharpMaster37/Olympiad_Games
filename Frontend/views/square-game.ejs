<div class="load" id="load">Загрузка прогресса</div>
<div class="col-sm-2">
  <div class="Info-window">
    <div class="wrapper-score">
      <p>Баллы:</p>
      <p class="count-value" id="count-point">0</p>
    </div>
    <div class="wrapper-time" id="timer">00:00:00</div>
  </div>
</div>
<div class="col-sm-10">
  <div id="topicsData" style="display: none;">
    <%= JSON.stringify(topics) %>
  </div>
  <div class="Game">
    <%- include('./square-modal-window.ejs') %>
    <div class="gameover" id="gameover">Игра окончена!</div>
    <table class="Square-table">
      <thead>
      <tr>
        <th>Тема</th>
        <th>Уровень 1</th>
        <th>Уровень 2</th>
        <th>Уровень 3</th>
        <th>Уровень 4</th>
        <th>Уровень 5</th>
        <th>Бонусы за строку</th>
      </tr>
      </thead>
      <tbody>
      <% for(let i = 0; i < topics.length; i++) { %>
        <tr>
          <td><%- topics[i].topic %></td>
          <% for(let j = 0; j < 5; j++) { %>
            <td><button type="button" class="Question" data-topic-index="<%= i %>" data-level-index="<%= j %>"><%=(j + 1) * 10 %> баллов</button></td>
          <% } %>
          <td class="bonus">30 баллов</td>
        </tr>
      <% } %>
      <tr>
        <td>Бонусы за столбцы</td>
        <% for(let j = 0; j < 5; j++) { %>
          <td class="bonus">30 баллов</td>
        <% } %>
      </tr>
      </tbody>
    </table>
  </div>
</div>
