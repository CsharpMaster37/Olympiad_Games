<!DOCTYPE html>
<html lang="ru">
  <head>
    <%- include('../Common_Elements/head.ejs') %>
    <link rel="stylesheet" href="style_admin.css"/>
    <title>Админ</title>
  </head>
  <body>
    <div class="wrapper">
        <%- include('../Common_Elements/header.ejs') %>
        <main class="main">
            <div class="col-sm-12">
              <table class="table-user">
                <thead>
                    <tr>
                        <th scope="col">Имя пользователя</th>
                        <th scope="col">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.username %></td>
                            <td>
                                <a href="/admin/<%= user._id %>/edit">Редактировать</a>
                                <form action="/admin/<%= user._id %>?_method=DELETE" method="POST">
                                    <button type="submit">Удалить</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
            <a href="/admin/add">Добавить нового пользователя</a>
          </div>
        </main>
        <%- include('../Common_Elements/footer.ejs') %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
