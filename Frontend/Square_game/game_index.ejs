<!DOCTYPE html>
<html lang="ru">
  <head>
    <%- include('../Common_Elements/head.ejs') %>
    <link rel="stylesheet" href="../Common_Elements/style-info.css"/>
    <link rel="stylesheet" href="style-game.css"/>
    <title>Квадрат</title>
  </head>
  <body>
    <div class="wrapper">
      <%- include('../Common_Elements/header.ejs') %>

      <main class="main">
        <div class="col-sm-2">
          <div class="Info-window">
            <div class="score-box">
              <div class="count-in-score">
                <p>Баллы:</p>
                <p class="count-value" id="count-point">0</p>
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-10">
          <div class="Game">
            <%- include('./modal-window.ejs') %>
