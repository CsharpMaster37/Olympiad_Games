<!DOCTYPE html>
<html lang="ru">
  <head>
    <%- include('../Common_Elements/head.ejs') %>

    <link rel="stylesheet" href="../Common_Elements/style-info.css"/>
    <link rel="stylesheet" href="style-table.css"/>    
    <title>Карусель</title>
  </head>
  <body>
    <div class="wrapper">
        <%- include('../Common_Elements/header.ejs') %>

      <main class="main">
        <div class="col-sm-2">
          <div class="Info-window">
            <div class="wrapper-score">
              <p>Баллы:</p>
              <p class="count-value" id="count-point">0</p>
            </div>
            <div class="wrapper-time">
              <p>Время:</p>
              <p class="count-value" id="count-point">00:00:00</p>
            </div>  
          </div>
        </div>
        <div class="col-sm-10">
          <div class="Game">
            <div class="wrapper-progress-table"> 
              <table id="progress-table">
                <tbody>
                  <tr>
                    <th>№</th>
                    <th>Цена</th>
                  </tr>
                </tbody>                
              </table>              
            </div>  
            <div class="wrapper-question">
              <label id = "label-question" for="input-answer">Вопрос?</label>
              <form class="form-answer">
                <input type="text" id="input-answer" name="input-answer" placeholder="Введите ответ!"/>
                <input id = "button-form-answer" class = "button-form-answer" type="button" value="Следующий вопрос" />
              </form>
            </div>          
          </div>
        </div>
      </main>
      <%- include('../Common_Elements/footer.ejs') %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="scripts.js"></script>
  </body>
</html>
